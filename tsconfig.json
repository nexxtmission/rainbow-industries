{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react",
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "**/lib/**/*",
        "**/__tests__/**/*",
        "**/__test__/**/*",
        "**/__integration__/**/*",
        "**/*.d.ts"
    ],
    "include": ["packages/**/*"]
}